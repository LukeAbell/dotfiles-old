tap caskroom/cask
tap caskroom/fonts
tap caskroom/versions

install brew-cask

# Make sure we're running on the latest
cask update

# Integration with Alfred; adds Caskroom to search paths so applications 
# installed with Homebrew Cask can be launched.
cask install alfred
cask alfred link

